{
    "tasks": [
        {
            "name": "Format .NET code",
            "group": "pre-commit",
            "command": "dotnet",
            "args": ["format", "--include", "${staged}"],
            "include": ["**/*.cs", "**/*.razor", "**/*.cshtml"]
        },
        {
            "name": "Prettier",
            "group": "pre-commit",
            "pathMode": "absolute",
            "command": "npx",
            "cwd": "WebApp/ClientApp",
            "args": ["prettier", "--write", "${staged}"],
            "include": [
                "**/*.js",
                "**/*.ts",
                "**/*.jsx",
                "**/*.tsx",
                "**/*.css",
                "**/*.less",
                "**/*.scss",
                "**/*.html",
                "**/*.json",
                "**/*.md"
            ]
        },
        {
            "name": "Eslint",
            "group": "pre-commit",
            "pathMode": "absolute",
            "command": "npx",
            "cwd": "WebApp/ClientApp",
            "args": ["eslint", "${staged}"],
            "include": ["**/*.js", "**/*.ts", "**/*.jsx", "**/*.tsx"]
        },
        {
            "name": "Stylelint",
            "group": "pre-commit",
            "pathMode": "absolute",
            "command": "npx",
            "cwd": "WebApp/ClientApp",
            "args": ["stylelint", "${staged}"],
            "include": ["**/*.css", "**/*.less", "**/*.scss"]
        }
    ]
}
